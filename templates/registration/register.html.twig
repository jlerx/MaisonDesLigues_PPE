{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
<div class="">

<div class="p-3"></div>

{# Message flash d'erreur, le compte n'est pas trouvé via le numero de licence #}
{% for message in app.flashes('error') %}
    <div class="flash-error d-flex justify-content-center p-2">
        <div class="alert alert-danger">
            {{message}}
        </div>
    </div>
{% endfor %}

<div class="d-flex justify-content-center">
    <div class="card border-primary p-3" style="width:40%;">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1  class="h3 mb-3 font-weight-normal">S'enregistrer</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_row(registrationForm.numLicence,{'attr': {'class': 'form-control'}, 'label':'Numéro de licence'} ) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword.first,{'attr': {'class': 'form-control'}, 'label': 'Mot de passe'} ) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword.second,{'attr': {'class': 'form-control'}, 'label': 'Répéter le mot de passe'}) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'm-2'}, 'label': 'Accepter les conditions : '}) }}
        </div>

        <button type="submit" class="btn btn-success">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
